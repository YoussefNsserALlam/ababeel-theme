{# Video-banner.twig #}
<section class="video-banner">
    {% if component.string %}
    <style>
        .video-banner {
            position: relative;
            width: 100%;
            overflow: hidden;
        }

        .video-banner video {
            filter: brightness(0.5);
            width: 100%;
            height: auto;
            min-height: 60vh;
            display: block;
            object-fit: cover;
        }

        .video-banner-content {
            display: flex;
            flex-direction: column;
            gap: 60px;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2;
        }

        .video-banner h1 {
            font-family: system-ui;
            color: #f7dcbe;
            font-size: 6rem;
            text-align: center;
            width: 90%;
            max-width: 1000px;
            padding: 0 20px;
            box-sizing: border-box;
            margin: 0;
        }

        /* Tablet styles */
        @media (max-width: 992px) {
            .video-banner h1 {
                font-size: 2.2em;
                width: 95%;
            }
        }

        /* Mobile styles */
        @media (max-width: 768px) {
            .video-banner video {
                min-height: 50vh;
            }

            .video-banner h1 {
                font-size: 1.8em;
                line-height: 1.4;
            }
            .video-banner-content {
                gap: 30px;
            }
        }

        /* Small mobile styles */
        @media (max-width: 480px) {
            .video-banner video {
                min-height: 40vh;
            }

            .video-banner h1 {
                font-size: 1.5em;
                padding: 0 15px;

            }
            .video-banner-content {
                gap: 20px;
            }
        }
        @keyframes fadeUp {
            0% {
                opacity: 0;
                transform: translateY(40px) scale(0.95);
            }
            100% {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Apply animation to the whole content wrapper */
        .video-banner-content {
            animation: fadeUp 1.2s ease-out forwards;
            opacity: 0; /* Start hidden */
        }

        /* Animate the titles with stagger delay */
        .video-banner h1 {
            animation: fadeUp 1.4s ease-out forwards;
            opacity: 0;
        }

        /* Second title appears after first */
        .video-banner h1:nth-child(2) {
            animation-delay: 0.3s;
        }

        /* Optional soft glow effect */
        .video-banner h1 {
            text-shadow: 0px 4px 20px rgba(0, 0, 0, 0.5);
        }
    </style>

    <div class="video-banner-content">
        <h1>{{ component.string2 }}</h1>
        <h1>{{component.string}}</h1>
    </div>
    {% endif %}

    {% if component.url %}
        <video src="{{ component.url }}" autoplay loop playsinline muted></video>
    {% endif %}
</section>
