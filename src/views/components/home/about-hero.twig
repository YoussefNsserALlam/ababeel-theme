<style>
    .about-hero {
        background-color: #035173;
        padding: 60px 20px;
        min-height: 300px;
        display: flex;
        gap: 80px;
        align-items: center;
        justify-content: center;
        color: #f8d8b5;
    }

    .inner-content {
        max-width: 1000px;
        width: 100%;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .about-hero h1 {
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .about-hero p {
        font-size: 1.2em;
    }

    .about-hero button {
        background-color: transparent;
        color: #f8d8b5;
        border: solid #f8d8b5 2px;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        margin-top: 20px;
        transition: all 0.3s ease;
    }

    .about-hero button:hover {
        border-color: #fa9939;
        color: #fa9939;
    }

    /* Tablet styles */
    @media (max-width: 1024px) {
        .about-hero {
            padding: 50px 20px;
            gap: 60px;
        }

        .about-hero h1 {
            font-size: 2.2em;
        }

        .about-hero p {
            font-size: 1.1em;
        }
    }

    /* Mobile styles */
    @media (max-width: 768px) {
        .about-hero {
            padding: 30px 20px;
            min-height: auto;
            gap: 30px;
        }

        .inner-content {
            max-width: 100%;
            flex-direction: column;
            text-align: center;
            gap: 20px;
        }

        .about-hero h1 {
            font-size: 1.8em;
            margin-bottom: 15px;
        }

        .about-hero p {
            font-size: 1em;
        }

        .about-hero button {
            padding: 8px 16px;
            font-size: 0.9em;
        }
    }

    /* For very small screens */
    @media (max-width: 480px) {
        .about-hero {
            padding: 20px 15px;
        }

        .about-hero h1 {
            font-size: 1.5em;
        }

        .about-hero p {
            font-size: 0.9em;
        }
    }
</style>

<section class="about-hero">
    <div class="inner-content">
        <div>
            <h1>{{component.about_hero_title}}</h1>
        </div>
        <div>
            <p>{{component.about_hero_description}}</p>
            <button>من نحن؟</button>
        </div>
    </div>
</section>
