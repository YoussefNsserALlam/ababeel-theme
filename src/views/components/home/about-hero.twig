<style>
.about-hero {
    background-color: #035173;
    padding: 60px 20px;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #f8d8b5;
}

.inner-content {
    max-width: 1100px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 60px;
}

.about-hero h1 {
    font-size: 2.5em;
    margin-bottom: 20px;
}

.text_with_vd {
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 500px;
    gap: 15px;
}

.about-hero p {
    font-size: 1.2em;
    line-height: 1.6;
}

.about-hero button {
    background-color: transparent;
    color: #f8d8b5;
    border: solid #f8d8b5 2px;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 1em;
    cursor: pointer;
    transition: all 0.3s ease;
    width: fit-content;
}

.about-hero button:hover {
    border-color: #fa9939;
    color: #fa9939;
}

/* Tablet styles */
@media (max-width: 1024px) {
    .about-hero {
        padding: 50px 20px;
    }

    .inner-content {
        gap: 40px;
    }

    .about-hero h1 {
        font-size: 2.2em;
    }

    .about-hero p {
        font-size: 1.1em;
    }

    .text_with_vd {
        max-width: 450px;
    }
}

/* Mobile styles */
@media (max-width: 768px) {
    .about-hero {
        padding: 30px 20px;
        min-height: auto;
    }

    .inner-content {
        flex-direction: column;
        text-align: center;
        gap: 25px;
    }

    .text_with_vd {
        align-items: center;
        max-width: 100%;
        padding: 0 10px;
        gap: 12px;
    }

    .about-hero h1 {
        font-size: 1.8em;
        margin-bottom: 10px;
    }

    .about-hero p {
        font-size: 1em;
        line-height: 1.5;
    }

    .about-hero button {
        padding: 8px 16px;
        font-size: 0.9em;
        margin-top: 5px;
    }
}

/* Small screens */
@media (max-width: 480px) {
    .about-hero {
        padding: 20px 15px;
    }

    .about-hero h1 {
        font-size: 1.5em;
    }

    .about-hero p {
        font-size: 0.95em;
        line-height: 1.4;
    }

    .text_with_vd {
        gap: 10px;
    }
}
</style>

<section class="about-hero">
    <div class="inner-content">
        <div>
            <h1>{{component.about_hero_title}}</h1>
        </div>
        <div class="text_with_vd">
            <p>{{component.about_hero_description}}</p>
            <button>منتجاتُنا</button>
        </div>
    </div>
</section>
