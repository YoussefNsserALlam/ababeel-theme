
<style>
  .All-line
  {
    width: 100%;
  }
  .All-line .line
  {
    width: 50px;
    height: 5px;
    border-radius: 10px;
    background-color: #fa9939;
    margin: 5px;
  }
  .All-line .Circle
  {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #fa9939;
    margin: 5px;
  }
  .s-block__title__Alla
  {
    justify-content: center;
    flex-direction: column;
  }

  .store-footer__inner
  {
    background-color: #035173 !important;
    color: #f8dcbf;
  }
 
  salla-contacts .s-contacts-list
  {
    flex-wrap: wrap;
    justify-content: space-around;
    flex-direction: row;
  }

salla-contacts .s-contacts-list .s-contacts-item
{
    flex-direction: column;
    align-items: center;
}
salla-contacts .s-contacts-list .s-contacts-item span
{
    margin: 5px;
}

salla-social ul
{
    justify-content: space-around;
    margin-top: 20px;
}
salla-apps-icons
{
    text-align: center;
}
salla-apps-icons .s-apps-icons-list
{
    justify-content: space-around;
}
salla-apps-icons .s-apps-icons-list, salla-payments ul
{
    padding: 10px;
    /* background-color: #fa9939; */
    border-radius: 10px;
}
.footer_Pay_theme, .store-footer
{
    background-color: #001f3d !important;
}
.footer_Pay_theme p 
{
    color: #f8dcbf;
}
.s-menu-footer-list
{
  display: flex;
}
.store-footer h3
{
  text-align: center;
   margin-top: 10px;
}
.s-menu-footer-list .s-menu-footer-item
{
  margin: 5px;
}
.store-footer
{
  border-top: 2px solid #fa9939;
}
.s-maintenance-alert-wrapper
{
    display:none !important;
}
 .s-product-card-entry
  {
    background-color: #f8dcbf;
    color: #035173;
    box-shadow: 0px 0px 20px 0px #fa99397d;
  }
  .s-product-card-content-title a
  {
    color: #035173;
  }
  .s-product-card-sale-price h4
  {
    color: #fa9939 !important;
  }
  .s-button-primary-outline
  {
    border-color: #035173;
    color: #035173;
  }
  .s-button-primary-outline:hover
  {
    background-color: #035173;
    color: #f8dcbf;
  }
  .s-block__title
  {
    justify-content: center !important;
    color: #f8dcbf;
    text-align: center;
  }
      .breadcrumbs, .main-content
    {
        color: #f8dcbf;
    }
    .breadcrumbs svg
    {
        fill: #fa9939;
    }
@media screen and (max-width:500px) 
{
    .footer_theme_inner
    {
        flex-direction: column;
    }
    salla-social ul
    {
    margin-top: 0px;
    }
}
</style>
<footer class="store-footer">
	<div aria-label="footer" class="store-footer__inner">
		<div class="container flex grid-col-1 lg:grid-cols-6 gap-8 lg:gap-6 footer_theme_inner">
			<div class="lg:col-span-2 rtl:lg:pl-20 ltr:lg:pr-20 text-center">
				<a href="{{ link('/') }}" class="flex items-center m-0 link_inner_store_name flex justify-center align-center">
					<h1>{{store.name}}</h1>
				</a>
				  <div class="All-line flex items-center justify-center">
                     <div class="line"></div>
                     <div class="Circle"></div>
                   <div class="line"></div>
                  </div>
				{% if store.description %}
					<p class="max-w-sm leading-6 mb-6 text-center">
						{{ store.description|raw }}
					</p>
				{% endif %}

				<div class="hidden lg:block">
					<salla-social class="mb-6"></salla-social>
				</div>

          {# vat #}
          {% if store.settings.tax.number %}
            <div class="flex rtl:space-x-reverse space-x-2 items-end flex-col">
              {% if store.settings.tax.certificate %}
                <a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
                  <img width="100%" height="100%" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
                </a>
              {% endif %}
              <div>
                <p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
                <b class="text-sm">{{ store.settings.tax.number }}</b>
              </div>
            </div>

            {% if store.settings.tax.certificate %}
              <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
                <div class="flex justify-center max-w-full">
                  <img class="w-full" loading="lazy" 
                  src="{{ 'images/s-empty.png' | cdn }}" 
                  data-src="{{ store.settings.tax.certificate }}" 
                  alt="{{ store.settings.tax.number }}"/>
                </div>
              </salla-modal>
            {% endif %}
          {% endif %}
        </div>
		<div class="flex justify-between items-center flex-col">
			<div>
				<h3>{{ trans('blocks.footer.pages_links') }}</h3>
				<salla-menu source="footer"></salla-menu>
			</div>

			<div>
				<salla-contacts class="text-center"></salla-contacts>

				<div class="lg:hidden contact-social">
					<salla-social></salla-social>
				</div>
			</div>
        </div>
			<salla-apps-icons class="lg:col-span-2 rtl:lg:pr-20 ltr:lg:pl-20"></salla-apps-icons>

		</div>
	</div>

	<div class="md:flex items-center justify-between py-4 container text-center footer_Pay_theme">
		<span class="text-sm copyright-text">{% hook copyright %}</span>
		<salla-payments></salla-payments>
	</div>
</div>

<span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-3"></span></footer>