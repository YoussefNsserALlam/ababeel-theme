<style>
.store-footer {
    position: relative;
    margin-top: 4rem;
    background: #045171;
    color: white;
    overflow: hidden;
}

.store-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #F79531, transparent);
}

@media (min-width: 640px) {
    .store-footer {
        margin-top: 5rem;
    }
}

.store-footer a {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: white;
    text-decoration: none;
}

.store-footer a:hover {
    color: #F79531;
    transform: translateX(4px);
}

.store-footer__inner {
    border-bottom: 1px solid #F79531;
    padding: 3rem 0;
    position: relative;
}

@media (min-width: 1024px) {
    .store-footer__inner {
        padding: 5rem 0;
    }
}

.store-footer h3 {
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 700;
    letter-spacing: -0.025em;
    color: white;
    position: relative;
    padding-bottom: 0.75rem;
}

.store-footer h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 3px;
    background: #F79531;
    border-radius: 2px;
}

@media (min-width: 1024px) {
    .store-footer h3 {
        margin-bottom: 2rem;
        font-size: 1.375rem;
    }
}

.store-footer .social-link {
    display: flex;
    height: 2.5rem;
    width: 2.5rem;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    border: 1px solid #F79531;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(247, 149, 49, 0.1);
    backdrop-filter: blur(10px);
}

.store-footer .social-link:hover {
    background: #F79531;
    border-color: #F79531;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.store-footer .contact-social {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #F79531;
}

.store-footer .contact-social ul {
    margin-bottom: 0;
}

/* Enhanced description styling */
.store-footer .max-w-sm {
    color: white;
    line-height: 1.75;
    font-size: 0.95rem;
}

/* Menu items styling */
.store-footer salla-menu {
    display: block;
}

/* Trust badges container */
.store-footer .flex.gap-4 {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

/* Tax number styling */
.store-footer .text-text-grey {
    color: white;
    font-size: 0.875rem;
    font-weight: 500;
}

.store-footer .text-sm b {
    color: white;
    font-weight: 600;
}

/* Copyright section */
.store-footer .py-4 {
    padding: 2rem 0;
    background: rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(10px);
}

.copyright-text p {
    color: white;
    font-size: 0.875rem;
}

/* Payment icons styling */
.store-footer salla-payments {
    opacity: 0.9;
    transition: opacity 0.3s ease;
}

.store-footer salla-payments:hover {
    opacity: 1;
}

/* Responsive grid improvements */
@media (min-width: 1024px) {
    .store-footer .container.grid {
        gap: 3rem;
    }
    
    .store-footer .lg\:col-span-2 {
        padding-right: 2rem;
    }
}

/* Image hover effects */
.store-footer img {
    transition: all 0.3s ease;
}

.store-footer img:hover {
    transform: scale(1.05);
}

/* Light theme overrides */
.footer-is-light .store-footer {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
    color: #1e293b;
}

.footer-is-light .store-footer h3 {
    color: #0f172a;
}

.footer-is-light .store-footer h3::after {
    background: linear-gradient(90deg, #0d506c, #116885);
}

.footer-is-light .store-footer a {
    color: #475569;
}

.footer-is-light .store-footer a:hover {
    color: #0d506c;
}

.footer-is-light .store-footer .social-link {
    border-color: #cbd5e1;
    background: rgba(255, 255, 255, 0.7);
}

.footer-is-light .store-footer .social-link:hover {
    background: #ffffff;
    border-color: #0d506c;
}

.footer-is-light .store-footer__inner {
    border-bottom-color: #e2e8f0;
}

.footer-is-light .store-footer .contact-social {
    border-top-color: #e2e8f0;
}

.footer-is-light .copyright-text p {
    color: #64748b;
}

.footer-is-light .store-footer .py-4 {
    background: rgba(241, 245, 249, 0.8);
}

/* Additional polish */
.store-footer .container > div {
    animation: fadeInUp 0.6s ease-out backwards;
}

.store-footer .container > div:nth-child(2) {
    animation-delay: 0.1s;
}

.store-footer .container > div:nth-child(3) {
    animation-delay: 0.2s;
}

.store-footer .container > div:nth-child(4) {
    animation-delay: 0.3s;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Subtle pattern overlay */
.store-footer::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
        radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
    opacity: 0.5;
}
</style>

<footer class="store-footer">
	<div aria-label="footer" class="store-footer__inner">
		<div class="container grid grid-col-1 lg:grid-cols-6 gap-8 lg:gap-6">
			<div class="lg:col-span-2 rtl:lg:pl-20 ltr:lg:pr-20">
				<a href="{{ link('/') }}" class="flex items-center m-0">
					<h3>{{store.name}}</h3>
				</a>
				{% if store.description %}
					<div class="max-w-sm leading-6 mb-6">
						{{ store.description|raw }}
          </div>
				{% endif %}

				<div class="hidden lg:block">
					<salla-social class="block mb-6"></salla-social>
				</div>

		<div class="flex gap-4">
		  {# trust badges #}
		  <salla-trust-badges {% if theme.settings.get('footer_is_dark') %} dark {% endif %}></salla-trust-badges>
          {# vat #}
          {% if store.settings.tax.number %}
            <div class="flex rtl:space-x-reverse space-x-2 items-end">
              {% if store.settings.tax.certificate %}
                <a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
                  <img width="40" height="50" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
                </a>
              {% endif %}
              <div>
                <p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
                <b class="text-sm">{{ store.settings.tax.number }}</b>
              </div>
            </div>

            {% if store.settings.tax.certificate %}
              <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
                <div class="flex justify-center max-w-full">
                  <img class="w-full" loading="lazy" 
                  src="{{ 'images/s-empty.png' | cdn }}" 
                  data-src="{{ store.settings.tax.certificate }}" 
                  alt="{{ store.settings.tax.number }}"/>
                </div>
              </salla-modal>
            {% endif %}
          {% endif %}
        </div>
        </div>

			<div>
				<h3>{{ trans('blocks.footer.pages_links') }}</h3>
				<salla-menu source="footer"></salla-menu>
			</div>

			<div>
				<salla-contacts></salla-contacts>

				<div class="lg:hidden contact-social">
					<salla-social></salla-social>
				</div>
			</div>


		</div>
	</div>

	<div class="md:flex items-center justify-between py-4 container text-center">
		<span class="text-sm copyright-text">{% hook copyright %}</span>

		<salla-payments></salla-payments>
	</div>

<span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-3 opacity-40"></span>
</footer>